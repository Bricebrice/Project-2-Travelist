<div class="album py-5 bg-light">
  <div class="container">
    <h2 class="mb-4">All destinations</h2>
    <div class="row">
      {{#if post.length}}
        {{#each post}}
          <div class="col-md-4">
            {{! CARD }}
            <div class="card mb-4 box-shadow">
              <a href="/explore/posts/{{id}}" class="stretched-link"></a>

              <img class="card-img-top" src="{{image}}" alt="Card image cap" />
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <h3 class="mb-2">{{location}}</h3>
                  </div>
                  <small class="text-muted mb-2">{{duration}} days</small>
                </div>
                <p class="card-text">{{description}}</p>

              </div>
              <div class="card-footer bg-transparent">
                <div class="d-flex justify-content-between align-items-center">
                  <a
                    class="icon-link icon-link-hover disabled"
                    style="--bs-icon-link-transform: translate3d(0, -.125rem, 0);"
                    href="#"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="16"
                      height="16"
                      fill="currentColor"
                      class="bi bi-person-circle"
                      viewBox="0 0 16 16"
                    >
                      <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                      <path
                        fill-rule="evenodd"
                        d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1"
                      />
                    </svg>
                    {{createdBy.username}}
                  </a>

                  {{!-- {{! BOOKMARK EMPTY}}
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="16"
                      height="16"
                      fill="currentColor"
                      class="bi bi-bookmark"
                      viewBox="0 0 16 16"
                    >
                      <path
                        d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.777.416L8 13.101l-5.223 2.815A.5.5 0 0 1 2 15.5zm2-1a1 1 0 0 0-1 1v12.566l4.723-2.482a.5.5 0 0 1 .554 0L13 14.566V2a1 1 0 0 0-1-1z"
                      />
                    </svg>
                    {{! END BOOKMARK EMPTY}}
                    {{! BOOKMARK FILL}}
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="16"
                      height="16"
                      fill="currentColor"
                      class="bi bi-bookmark-fill"
                      viewBox="0 0 16 16"
                    >
                      <path
                        d="M2 2v13.5a.5.5 0 0 0 .74.439L8 13.069l5.26 2.87A.5.5 0 0 0 14 15.5V2a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2"
                      />
                    </svg>
                    {{! END BOOKMARK FILL}} --}}
                </div>

              </div>
            </div>
            {{! END CARD }}
          </div>
        {{/each}}
      {{else}}
        <h2 class="mb-4">There are no posts yet!</h2>
      {{/if}}
      <p><a href="/explore/posts/create" class="btn btn-danger my-2 me-2">Create
          new post</a>
      </p>
    </div>
  </div>
</div>