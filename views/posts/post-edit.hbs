<h3>Edit your post</h3>

<form action="/explore/posts/{{post._id}}/edit" method="POST" enctype="multipart/form-data">
    
    <label>Title:</label>
    <input type="text" name="title" placeholder="Add travel title" value="{{post.title}}">
 
    <label> Location:</label>
    <input type="text" name="location" placeholder="Add location" value="{{post.location}}">
   
    <label> Duration:</label>
    <input type="text" name="duration" placeholder="Add duration in days" value="{{post.duration}}"> 
 
    <label>Distance:</label>
    <input type="text" name="distance" placeholder="Add distance in km" value="{{post.typeOfTrip}}">
 
    <label> Type of Trip: </label>
    <select name="typeOfTrip" multiple>
        <option>Escape trip</option>
        <option>Spa trip</option>
        <option>Honeymoon</option>
        <option>Cultural Trip</option> 
        <option>Road Trip</option>
    </select>
   
    <label>Itinerary:</label>
    <input type="text" name="itinerary[0].day.location" placeholder="Add location">
    <textarea cols="30" rows="15" placeholder="Add description"></textarea>
    <input type="file" name="itinerary[0].day.images" placeholder="Add image" multiple>
    <button>Add more images</button>
    <button>Add day in your itinerary</button>
  
<button type="submit">Update Post</button>
 <form action="/explore/posts/{{post._id}}/delete" method="POST">
  <button>Delete Post</button>
  </form>

</form>