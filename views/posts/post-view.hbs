{{#each post}}
  <div>
    <h2>{{title}}</h2>
    <p>{{location}}</p>
    <p>{{duration}}</p>
    <p>{{distance}}</p>
    <p>{{typeOfTrip}}</p>

    {{#each itinerary}}
      {{#with day}}
        <div>
          <p>{{location}}</p>
          <p>{{description}}</p>
          <img src="{{images}}" alt="Image" />
        </div>
      {{/with}}
    {{/each}}
  </div>
{{/each}}

<button><a href="/explore/posts/{{post._id}}/edit">Edit post</a></button>