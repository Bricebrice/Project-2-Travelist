<form
  action="/explore/posts/{{post._id}}/itinerary/{{day._id}}/edit"
  method="POST"
  enctype="multipart/form-data"
>

  <label for="title">Title:</label>
  <input
    type="text"
    name="title"
    placeholder="Add title"
    value="{{day.title}}"
  />

  <label for="location"> Location:</label>
  <input
    type="text"
    name="location"
    placeholder="Add location"
    value="{{day.location}}"
  />

  <label for="description">Description:</label>
  <textarea
    name="description"
    rows="10"
    cols="45"
  >{{day.description}}</textarea>

  <label for="image">Image:</label>
  <input type="file" name="dayImage" class="form-control-file" />
  <input type="text" name="existingImage" hidden value="{{day.image}}" />

  <button>Submit</button>
</form>