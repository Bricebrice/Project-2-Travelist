<div class="login-container">
<main class="form-login w-100 m-auto">
  <form action="/login" method="POST" >
    <h1 class="h3 mb-3 fw-normal">Log in</h1>
    <div class="form-floating">
      <input type="email" class="form-control mb-3" id="floatingInput" name="email" placeholder="name@example.com">
      <label for="floatingInput">Email</label>
    </div> 
    <div class="form-floating">
      <input type="password" class="form-control" id="floatingPassword" name="password" placeholder="">
      <label for="floatingPassword">Password</label>
    </div>
    <button class="btn btn-danger w-100 py-2 mt-3" type="submit">Log in</button>
  </form>
</main>
</div>
{{#if errorMessage}}
  <p class="error" style="color: red">{{errorMessage}}</p>
{{/if}}