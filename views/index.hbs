<main>
  <section class="jumbotron text-center">
    <div class="container">
      <h1 class="jumbotron-heading">Let your perfect trip begin</h1>
      <hr class="hr" />
      <p class="lead">Explore, create, and share travel guides.</p>
      <p>
        <a href="/explore/posts" class="btn btn-primary m-2">Explore</a>
        <a href="/explore/posts/create" class="btn btn-secondary m-2">Create</a>
      </p>
    </div>
  </section>

  {{! CONTAINER 1 }}

  <div class="album py-5 bg-light">
    <div class="container">
      <h2 class="mb-4">Popular destinations</h2>
      <div class="row">
        {{#each post}}
          <div class="col-md-4">
            {{! CARD }}
            <div class="card mb-4 box-shadow">
              <img
                class="card-img-top"
                src="/images/card-1.jpg"
                alt="Card image cap"
              />
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <h3 class="mb-2">{{location}}</h3>
                  </div>
                  <small class="text-muted mb-2">{{duration}} days</small>
                </div>
                <p class="card-text">{{description}}</p>

              </div>
              <div class="card-footer bg-transparent border-secondary">
                <div class="d-flex justify-content-between align-items-center">
                  <a
                    class="icon-link icon-link-hover"
                    style="--bs-icon-link-transform: translate3d(0, -.125rem, 0);"
                    href="#"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="16"
                      height="16"
                      fill="currentColor"
                      class="bi bi-person-circle"
                      viewBox="0 0 16 16"
                    >
                      <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                      <path
                        fill-rule="evenodd"
                        d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1"
                      />
                    </svg>
                    User name
                  </a>
                  {{! BOOKMARK EMPTY}}
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    fill="currentColor"
                    class="bi bi-bookmark"
                    viewBox="0 0 16 16"
                  >
                    <path
                      d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.777.416L8 13.101l-5.223 2.815A.5.5 0 0 1 2 15.5zm2-1a1 1 0 0 0-1 1v12.566l4.723-2.482a.5.5 0 0 1 .554 0L13 14.566V2a1 1 0 0 0-1-1z"
                    />
                  </svg>
                  {{! BOOKMARK FILL}}
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    fill="currentColor"
                    class="bi bi-bookmark-fill"
                    viewBox="0 0 16 16"
                  >
                    <path
                      d="M2 2v13.5a.5.5 0 0 0 .74.439L8 13.069l5.26 2.87A.5.5 0 0 0 14 15.5V2a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2"
                    />
                  </svg>
                </div>

              </div>
            </div>
            {{! END CARD }}
          </div>
        {{/each}}
        <p><a href="/explore/posts" class="btn btn-primary my-2 me-2">Explore
            all destinations</a></p>
      </div>
    </div>
  </div>

  {{! CONTAINER 2 }}

  <div class="album py-5 bg-info">
    <div class="container" id="icon-grid">
      <h2 class="mb-4 pb-2 border-bottom text-center">Create a new travel guide</h2>

      <div
        class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 py-5"
      >

        <div class="col d-flex align-items-start">
          <i class="bi bi-geo-alt-fill"></i>
          <div>
            <h3 class="fw-bold mb-0 fs-4 text-body-emphasis">Select your
              destination</h3>
            <p>Choose a location for your travel guide.</p>
          </div>
        </div>

        <div class="col d-flex align-items-start">
          <i class="bi bi-geo-alt-fill"></i>
          <div>
            <h3 class="fw-bold mb-0 fs-4 text-body-emphasis">Set your trip
              duration</h3>
            <p>Define the duration of your travel guide.</p>
          </div>
        </div>

        <div class="col d-flex align-items-start">
          <i class="bi bi-geo-alt-fill"></i>
          <div>
            <h3 class="fw-bold mb-0 fs-4 text-body-emphasis">Share your travel
              tips</h3>
            <p>Contribute your insights and recommendations.</p>
          </div>
        </div>

        <div class="col d-flex align-items-start">
          <i class="bi bi-geo-alt-fill"></i>
          <div>
            <h3 class="fw-bold mb-0 fs-4 text-body-emphasis">Discover new places</h3>
            <p>Explore and find exciting destinations for your guide.</p>
          </div>
        </div>
      </div>
      <p class="text-center"><a
          href="/explore/posts/create"
          class="btn btn-primary mx-auto"
        >Create new travel guide</a></p>
    </div>

  </div>

</main>